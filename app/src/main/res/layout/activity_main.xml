<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gabrielarroyave.practica1_2.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Calculador de resistencia\n Tocar para seleccionar"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:gravity="center"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/resistencia"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/white"

            android:id="@+id/bBoton1"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="0.1"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/black"
            android:visibility="invisible"
            android:id="@+id/bBoton2"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="0.1"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/black"
            android:visibility="invisible"
            android:id="@+id/bBoton3"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="0.1"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="0.4"
            android:layout_gravity="center"
            android:background="@color/brown"
            android:id="@+id/bBoton4"
            android:visibility="invisible"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/resistencia2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="El Valor de la Resistencia es"
            android:textSize="25dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:id="@+id/tValor"
            />

    </LinearLayout>
</LinearLayout>
